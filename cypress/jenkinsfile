pipeline {
    agent any

    options {
        ansiColor('xterm')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/BrendaTorresIT/ProyectoAPI.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('BrendaIT/ProyectoAPI') {
                    bat 'npm install'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                dir('BrendaIT/ProyectoAPI') {
                   
                    bat 'npx cypress run --spec "cypress/e2e/testAPI.api.cy.js"'
                }
            }
        }
        stage('Deploy')
           steps{
                 echo 'Exitoso'

           }


    }
}
